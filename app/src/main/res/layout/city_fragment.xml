<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <com.example.everyoneassist.Layout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.example.everyoneassist.Layout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                app:layout_heightPercent="27%w">

                <com.example.everyoneassist.Layout.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="10%w">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="发货人:"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        android:id="@+id/tvSendPerson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:text="小美"
                        android:textSize="@dimen/text_normal" />

                </com.example.everyoneassist.Layout.PercentRelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/deep_gray" />

                <com.example.everyoneassist.Layout.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="10%w">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="电话:"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        android:id="@+id/tvSendPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:text="13886298514"
                        android:textSize="@dimen/text_normal" />

                </com.example.everyoneassist.Layout.PercentRelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray" />

            </com.example.everyoneassist.Layout.PercentLinearLayout>

            <com.example.everyoneassist.Layout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                app:layout_heightPercent="30%w"
                app:layout_marginTopPercent="3%w">

                <com.example.everyoneassist.Layout.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="10%w"
                    app:layout_marginTopPercent="3%w">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="收货人:"
                        android:textSize="@dimen/text_normal" />

                    <EditText
                        android:gravity="right"
                        android:id="@+id/etRecePerson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@null"
                        android:hint="请填写收货人姓名"
                        android:textSize="@dimen/text_normal" />

                </com.example.everyoneassist.Layout.PercentRelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray" />

                <com.example.everyoneassist.Layout.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="10%w">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="电话:"
                        android:textSize="@dimen/text_normal" />

                    <EditText
                        android:inputType="phone"
                        android:maxLength="11"
                        android:gravity="right"
                        android:id="@+id/etRecePhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:background="@null"
                        android:hint="请填写收货人联系电话"
                        android:textSize="@dimen/text_normal" />

                </com.example.everyoneassist.Layout.PercentRelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray" />

            </com.example.everyoneassist.Layout.PercentLinearLayout>


            <com.example.everyoneassist.Layout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                app:layout_heightPercent="40%w"
                app:layout_marginTopPercent="3%w">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="加小费"
                    android:textSize="@dimen/text_normal"
                    app:layout_heightPercent="10%w"
                    app:layout_marginTopPercent="3%w" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/gray" />

                <com.example.everyoneassist.Layout.PercentRelativeLayout
                    app:layout_heightPercent="20%w"
                    app:layout_marginTopPercent="3%w"
                    android:background="@drawable/tip_bg"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="小费"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_normal"
                        app:layout_heightPercent="10%w"
                        app:layout_marginTopPercent="3%w" />


                    <EditText
                        android:id="@+id/etTip"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:text="20元"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_normal"
                        app:layout_heightPercent="10%w"
                        app:layout_marginTopPercent="3%w" />

                </com.example.everyoneassist.Layout.PercentRelativeLayout>

            </com.example.everyoneassist.Layout.PercentLinearLayout>

            <com.example.everyoneassist.Layout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                app:layout_heightPercent="40%w"
                app:layout_marginTopPercent="3%w">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="备注："
                    android:textSize="@dimen/text_normal"
                    app:layout_heightPercent="10%w"
                    app:layout_marginTopPercent="3%w" />

                <EditText
                    android:id="@+id/etRemarks"
                    android:gravity="top"
                    app:layout_marginLeftPercent="5%w"
                    app:layout_marginRightPercent="5%w"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_bg"
                    android:textSize="@dimen/text_normal"
                    app:layout_heightPercent="20%w" />

            </com.example.everyoneassist.Layout.PercentLinearLayout>


            <com.example.everyoneassist.Layout.PercentRelativeLayout
                app:layout_heightPercent="20%w"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCountMoney"
                    app:layout_marginLeftPercent="5%w"
                    android:layout_centerVertical="true"
                    app:layout_marginTopPercent="5%w"
                    android:text="合计：32元"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvPay"
                    android:background="@drawable/pay_str_bg"
                    app:layout_marginRightPercent="5%w"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="前往支付"/>

            </com.example.everyoneassist.Layout.PercentRelativeLayout>

        </com.example.everyoneassist.Layout.PercentLinearLayout>
    </ScrollView>
</LinearLayout>