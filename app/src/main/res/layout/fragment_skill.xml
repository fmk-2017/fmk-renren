<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dushikuaibang.Fragment.SkillFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/skill_manager"
            android:textColor="@color/black"
            android:textSize="@dimen/text_sbig" />

        <ImageView
            android:id="@+id/right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/appbar_padding_top"
            android:src="@mipmap/skills_management_03" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="1dp"
        android:background="@color/thin_white" />

    <com.example.dushikuaibang.View.MyListView
        android:id="@+id/skilllistview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/thin_white"
        android:dividerHeight="8dp" />

</LinearLayout>
