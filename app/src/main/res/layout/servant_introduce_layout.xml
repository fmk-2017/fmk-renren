<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.dushikuaibang.View.MyListView2
        android:id="@+id/mylistview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.example.dushikuaibang.Layout.PercentLinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="服务评价（1）"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/thin_white" />

        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/thin_white"
            android:gravity="left"
            android:padding="5dp"
            app:layout_minHeightPercent="30%w" />

        <TextView
            android:id="@+id/release_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/skill_item_orange1"
            android:gravity="center"
            android:text="发表"
            android:textColor="@color/white"
            android:textSize="@dimen/text_big"
            app:layout_marginBottomPercent="25%w"
            app:layout_marginLeftPercent="20%w"
            app:layout_marginRightPercent="20%w"
            app:layout_marginTopPercent="5%w" />

    </com.example.dushikuaibang.Layout.PercentLinearLayout>

</LinearLayout>