<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_at_will_buy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.dushikuaibang.Activity.AtWillBuyActivity">

    <include layout="@layout/header_title" />

    <ScrollView
        android:id="@+id/mySc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <com.example.dushikuaibang.Layout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <com.example.dushikuaibang.Layout.PercentLinearLayout
                android:id="@+id/topview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_heightPercent="16%sh">

                <com.example.dushikuaibang.View.CircleImageView
                    android:id="@+id/sk_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/jz"
                    app:layout_heightPercent="20%w"
                    app:layout_widthPercent="20%w" />

                <TextView
                    android:id="@+id/sk_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="name"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </com.example.dushikuaibang.Layout.PercentLinearLayout>

            <com.example.dushikuaibang.Layout.PercentLinearLayout
                android:id="@+id/other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="内容介绍："
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_big" />

                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="去附近美宜佳买一包芙蓉王"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_big"
                    app:layout_maxHeightPercent="16%w"
                    app:layout_minHeightPercent="12%w" />

            </com.example.dushikuaibang.Layout.PercentLinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="送达时间：2017-01-10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/thin_white" />

            <LinearLayout
                android:id="@+id/no_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/buyaddress_linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/address_buy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="购买地址：龙东副业文具玩具批发城3楼"
                        android:textColor="@color/deep_gray"
                        android:textSize="@dimen/text_normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/address_receving"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="收货地址：义乌小商品批发城4楼"
                        android:textColor="@color/deep_gray"
                        android:textSize="@dimen/text_normal" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/shipper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发货人：哈哈哈"
                            android:textColor="@color/deep_gray"
                            android:textSize="@dimen/text_normal" />

                        <TextView
                            android:id="@+id/shipper_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="联系电话：17665321417"
                            android:textColor="@color/deep_gray"
                            android:textSize="@dimen/text_normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/shipper_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="发货地址：义乌小商品批发城4楼"
                            android:textColor="@color/deep_gray"
                            android:textSize="@dimen/text_normal" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/thin_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/consignee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货人：哈哈哈"
                            android:textColor="@color/deep_gray"
                            android:textSize="@dimen/text_normal" />

                        <TextView
                            android:id="@+id/consignee_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="联系电话：17665321417"
                            android:textColor="@color/deep_gray"
                            android:textSize="@dimen/text_normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/consignee_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="收货地址：义乌小商品批发城4楼"
                            android:textColor="@color/deep_gray"
                            android:textSize="@dimen/text_normal" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/thin_white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送费：30元"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/order_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="订单号：055050"
                    android:textColor="@color/deep_gray"
                    android:textSize="@dimen/text_normal" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/thin_white" />

            <com.example.dushikuaibang.Layout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/contacts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="联系人：潘先生"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        android:id="@+id/contacts_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="联系电话：13530914296"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        android:id="@+id/remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="备注："
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

                <TextView
                    android:id="@+id/yyz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="应邀服务者"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_normal"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/thin_white" />

            </com.example.dushikuaibang.Layout.PercentLinearLayout>

            <include
                layout="@layout/servant_introduce_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.example.dushikuaibang.Layout.PercentLinearLayout>

    </ScrollView>

    <!--theme_login_bg-->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/table_bg"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="货已送到，请确认付款"
        android:textColor="@color/white"
        android:textSize="@dimen/text_big"
        app:layout_marginLeftPercent="20%w"
        app:layout_marginRightPercent="20%w"
        app:layout_marginTopPercent="6%w" />

</LinearLayout>
